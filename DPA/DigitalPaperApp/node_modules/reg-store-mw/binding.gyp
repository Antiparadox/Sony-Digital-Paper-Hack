{
  "targets": [
    {
      "target_name": "crypto_utils",
      "sources": [
        "src/crypto_utils.cc",
        "src/tstring.h",
        "src/Log.h",
        "src/AddCertWorker.h",
        "src/GenKeyPairWorker.h",
      ],
      "include_dirs": [
        "<!(node -e \"require('nan')\")"
      ],
      'conditions': [
        ['OS=="win"',
          {
            'sources': [
              "src/win/Log.cpp",
              "src/win/WinErrorCode.h",
              "src/win/AutoCriticalSection.h",
              "src/win/CriticalSection.h",
              "src/win/StringUtils.h",
              "src/win/CertUtils.h",
              "src/win/CertUtils.cpp",
              "src/win/KeyUtils.h",
              "src/win/KeyUtils.cpp",
            ],
            "libraries": [
              "crypt32.lib"
            ],
            'msvs_settings': {
              'VCCLCompilerTool': {
                'ExceptionHandling': '1', # /EHsc
                'TreatWChar_tAsBuiltInType': 'true',   # /Zc:wchar_t
              }
            },
            'msvs_configuration_attributes': {
              'CharacterSet': '1', # Use Unicode Character Set
            },
          }
        ],
        ['OS=="mac"',
          {
            'sources': [
              "src/mac/Log.cpp",
              "src/mac/MacErrorCode.h",
              "src/mac/AutoCFString.h",
              "src/mac/CertUtils.h",
              "src/mac/CertUtils.cpp",
              "src/mac/KeyUtils.h",
              "src/mac/KeyUtils.cpp",
            ],
            "libraries": [
              "-framework",
              "Security",
            ],
            'xcode_settings': {
              'MACOSX_DEPLOYMENT_TARGET': '10.10',
              'GCC_ENABLE_CPP_RTTI': 'YES',
              'GCC_ENABLE_CPP_EXCEPTIONS': 'YES',
              'CLANG_CXX_LANGUAGE_STANDARD':'c++11',
              'OTHER_CPLUSPLUSFLAGS' : ['-stdlib=libc++'],
              'OTHER_LDFLAGS': ['-stdlib=libc++'],
            },
          }
        ],
      ]
    }
  ]
}