{
  "targets": [
    {
      "target_name": "proxy_resolver",
      "sources": [
        "src/proxy_resolver.cc",
        "src/tstring.h",
        "src/Log.h",
        "src/ResolveProxyWorker.h",
      ],
      "include_dirs": [
        "<!(node -e \"require('nan')\")"
      ],
      'conditions': [
        ['OS=="win"',
          {
            'sources': [
              "src/win/Log.cpp",
              "src/win/WinErrorCode.h",
              "src/win/StringUtil.h",
              "src/win/StringUtil.cpp",
              "src/win/ProxyResolver.h",
              "src/win/ProxyResolver.cpp",
            ],
            "libraries": [
              "Winhttp.lib"
            ],
            'msvs_settings': {
              'VCCLCompilerTool': {
                'ExceptionHandling': '1', # /EHsc
                'TreatWChar_tAsBuiltInType': 'true',   # /Zc:wchar_t
              }
            },
            'msvs_configuration_attributes': {
              'CharacterSet': '1', # Use Unicode Character Set
            },
          }
        ],
        ['OS=="mac"',
          {
            'sources': [
              "src/mac/Log.cpp",
              "src/mac/StringUtils.h",
              "src/mac/AutoCfRef.h",
              "src/mac/MacErrorCode.h",
              "src/mac/ProxyResolver.h",
              "src/mac/ProxyResolver.cpp",
            ],
            "libraries": [
              "-framework",
              "CFNetwork",
            ],
            'xcode_settings': {
              'MACOSX_DEPLOYMENT_TARGET': '10.10',
              'GCC_ENABLE_CPP_RTTI': 'YES',
              'GCC_ENABLE_CPP_EXCEPTIONS': 'YES',
              'CLANG_CXX_LANGUAGE_STANDARD':'c++11',
              'OTHER_CPLUSPLUSFLAGS' : ['-stdlib=libc++'],
              'OTHER_LDFLAGS': ['-stdlib=libc++'],
            },
          }
        ],
      ]
    }
  ]
}